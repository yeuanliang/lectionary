extends layout
block content
    div(class="container")
      div(class="row justify-content-center")
        div(class="col-12 col-md-8")
            div(class="border" style="padding: 10px; margin-top: 20px; margin-bottom: 20px;")
              if scripts.length > 0
                each value,index in scripts
                    h6 #{scripts[index].title}
                    div #{scripts[index].content}
                    if index < scripts.length - 1
                        hr
