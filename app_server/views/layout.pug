    script(src="/js/bootstrap-datepicker.zh-CN.min.js")
    script.
      $('input').datepicker({
          format: "yyyy-mm-dd",
          autoClose: true,
          startDate: "2000-01-01",
          endDate: "2050-12-31",
          daysOfWeekHighlighted: "0",
          todayBtn: "linked",
          language: "zh-CN"
      });
      $('input').datepicker()
          .on('changeDate', function(e) {
              // `e` here contains the extra attributes
              var date = e.format(0,'yyyy-mm-dd')
              var href = window.location.href
              if (href.includes('date')) {
                href = href.substring(0,href.length-10) + date
              } else if (href.includes('?')) {
                href = href + '&date=' + date
              } else {
                href = href + '?date=' + date
              }
              window.open(href,'_self')
          });